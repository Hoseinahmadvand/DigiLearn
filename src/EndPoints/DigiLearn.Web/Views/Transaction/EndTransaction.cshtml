@{
    Layout = null;

    var isSuccess = TempData["Success"] != null;

    var isError = TempData["Error"] != null;
}
@if (isSuccess || isError)

{
    <html lang="fa">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@(isSuccess ? "پرداخت موفق" : "پرداخت ناموفق")</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 flex items-center justify-center h-screen">
        <div class="max-w-md w-full bg-white shadow-lg rounded-2xl p-6 text-center">
            <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full
                        @(isSuccess ? "bg-green-500" : "bg-red-500")">
                <i class="text-white text-3xl fa @(isSuccess ? "fa-check" : "fa-times")"></i>
            </div>
            <h1 class="text-xl font-bold mt-4">@(isSuccess ? "تراکنش موفق!" : "تراکنش ناموفق!")</h1>
            <p class="text-gray-600 mt-2">
                @(isSuccess ? "پرداخت شما با موفقیت انجام شد." : "پرداخت شما ناموفق بود. در صورت کسر مبلغ، طی 24 ساعت آینده بازگردانده می‌شود.")
            </p>
            <a href="/profile/" class="mt-4 inline-block px-6 py-2 rounded-full text-white
                                  @(isSuccess ? "bg-green-500 hover:bg-green-600" : "bg-red-500 hover:bg-red-600")">
                بازگشت به پنل کاربری
            </a>
        </div>
    </body>
    </html>
}
