@page
@using BannerModule.Utils
@model DigiLearn.Web.Areas.Admin.Pages.Banners.IndexModel
@{
    ViewData["title"] = "مدیریت بنر ها";
    ViewData["selected"] = "banner";
}
<a asp-page="add" class="btn btn-success mb-1">افزودن مورد جدید</a>
<div class="card ">
    <div class="table-responsive card-body p-0 mb-0">
        <table class="table table-bordered table-hover mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>لینک</th>
                    <th>موقعیت</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Banners)
                {
                    <tr>

                        <td>
                            <img src="@BannerDirectories.GetBannerImage(item.ImageName)" style="max-width:200px"/>
                            </td>
                        <td>@item.Title</td>
                        <td>@item.Url</td>
                        <td>@item.Positon</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge badge-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">غیرفعال</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-page="edit" asp-route-bannerId="@item.Id">ویرایش</a>
                            <delete-item url="@Url.Page("Index","Delete",new {id=item.Id})" class="btn btn-sm btn-danger">حذف</delete-item>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>