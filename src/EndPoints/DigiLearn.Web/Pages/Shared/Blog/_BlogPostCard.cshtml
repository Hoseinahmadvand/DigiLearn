@using BlogModule.Utils
@using Common.Domain.Utils
@model BlogModule.Services.DTOs.Query.BlogPostFilterItemDto

@{
    var link = $"/blog/{Model.Slug}";
}

<div class="swiper-slide">
    <div class="relative">
        <div class="relative z-10">
            <a href="@link" class="block">
                <img src="@BlogDirectories.GetPostImage(Model.ImageName)" alt="@Model.Title" class="max-w-full rounded-3xl" />
            </a>
            <a href="/blog?category=@Model.Category.Slug"
               class="absolute left-3 top-3 h-11 inline-flex items-center justify-center gap-1 bg-black/20 rounded-full text-white transition-all hover:opacity-80 px-4">
                <span class="font-semibold text-sm">@Model.Category.Title</span>
            </a>
        </div>
        <div class="bg-background rounded-b-3xl -mt-12 pt-12">
            <div class="bg-gradient-to-b from-background to-secondary rounded-b-3xl space-y-2 p-5 mx-5">
                <h2 class="font-bold text-sm">
                    <a href="@link" class="line-clamp-1 text-foreground transition-colors hover:text-primary">
                        @Model.Title
                    </a>
                </h2>
            </div>
            <div class="space-y-3 p-5">
                <div class="flex flex-wrap items-center justify-between gap-x-5">
                    <div class="flex flex-col items-start space-y-1">
                        <span class="line-clamp-1 font-semibold text-xs text-muted">نویسنده مقاله:</span>
                        <a href="#" class="line-clamp-1 font-bold text-xs text-foreground hover:text-primary">
                            @Model.OwnerName
                        </a>
                    </div>

                    <div class="flex items-center gap-1 text-muted">
                        <i class="fa fa-eye"></i>
                        <span class="font-semibold text-xs">@Model.Visit</span>
                    </div>
                </div>

                <div class="flex gap-3 mt-3">
                    <a href="@link" class="w-full h-8 inline-flex items-center justify-center gap-1 bg-primary rounded-full text-primary-foreground transition-all hover:opacity-80 px-4">
                        <span class="line-clamp-1 font-semibold text-sm">مشاهده مقاله</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
